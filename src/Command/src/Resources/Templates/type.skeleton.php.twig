{{ '{% extends \'base.html.twig\' %}' }}

{{ '{% block title %}Type!{% endblock %}' }}

{{ '{% block body %}' }}
<div class="form-wrapper">
    {{ '{{ form_start(form) }}' }}

{% for property in entity.properties %}
{% if property.name not in ['id', 'uuid'] %}
    <div>
        {{ '{% if form.' }}{{ property.name }}{{ '.vars.errors|length %}' }}
        <div class="form-error-wrapper">
            {{ '{{ form_errors(form.' }}{{ property.name }}{{ ') }}' }}
        </div>
        {{ '{% endif %}' }}
        {{ '{{ form_label(form.' }}{{ property.name }}{{ ') }}' }}
        {{ '{{ form_widget(form.' }}{{ property.name }}{{ ') }}' }}
    </div>

{% endif %}
{% endfor %}

    <div>
        {{ '{{ form_widget(form.save) }}' }}
    </div>

    {{ '{{ form_end(form) }}' }}
</div>
{{ '{% endblock %}' }}
