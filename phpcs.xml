<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">

    <description>PHP_CodeSniffer configuration</description>

    <arg name="colors"/>
    <arg value="p"/>

    <file>src</file>
    <file>tests</file>

    <exclude-pattern>var/*</exclude-pattern>
    <exclude-pattern>public/*</exclude-pattern>

    <rule ref="PSR1" />
    <rule ref="PSR2" />

</ruleset>