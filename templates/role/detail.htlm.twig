{% extends 'base.html.twig' %}

{% block title %}Detail!{% endblock %}

{% block body %}
<div class="role-wrapper">

    {% if role is not empty %}

    {% trans from role %}uuid{% endtrans %}: {{ role.uuid }}<br/>
    {% trans from role %}name{% endtrans %}: {{ role.name }}<br/>
    {% trans from role %}translatable{% endtrans %}: {{ role.translatable }}<br/>

    <a href="{{ path('role.list') }}">{% trans from 'global' %}List{% endtrans %}</a>
    <a href="{{ path('role.update', {"uuid": role.uuid}) }}">{% trans from 'global' %}Update{% endtrans %}</a>
    <a href="{{ path('role.delete', {"uuid": role.uuid}) }}">{% trans from 'global' %}Delete{% endtrans %}</a>
    {% endif %}

</div>

 {% endblock %}
