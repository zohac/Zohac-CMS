{% extends 'base.html.twig' %}

{% block title %}List!{% endblock %}

{% block body %}
<div class="roles-wrapper">

    {% for {{ entity.shortNameToLower }} in {{ entity.shortNamePlural }} %}
    <div class="role-wrapper">

        {% trans from role %}name{% endtrans %}: {{ role.name }}<br/>
        {% trans from role %}translatable{% endtrans %}: {{ role.translatable }}<br/>

        <a href="{{ path('role.detail', {"uuid": role.uuid}) }}">.uuid}) }}">{% trans from 'global' %}Detail{% endtrans %}</a>
    </div>
    {% endfor %}

</div>
<a href="{{ path('role.create') }}">{% trans from 'global' %}Create{% endtrans %}</a>
{% endblock %}
