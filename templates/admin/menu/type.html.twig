{% extends '@admin/admin_base.html.twig' %}

{% block title %}Type!{% endblock %}

{% block body %}
<div class="form-wrapper">
    {{ form_start(form) }}

    <div>
        {% if form.items.vars.errors|length %}
        <div class="form-error-wrapper">
            {{ form_errors(form.items) }}
        </div>
        {% endif %}
        {{ form_label(form.items) }}
        {{ form_widget(form.items) }}
    </div>

    <div>
        {% if form.archived.vars.errors|length %}
        <div class="form-error-wrapper">
            {{ form_errors(form.archived) }}
        </div>
        {% endif %}
        {{ form_label(form.archived) }}
        {{ form_widget(form.archived) }}
    </div>


    <div>
        {{ form_widget(form.save) }}
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
