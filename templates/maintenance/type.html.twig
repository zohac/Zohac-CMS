{% extends 'base.html.twig' %}

{% block title %}Type!{% endblock %}

{% block body %}
<div class="form-wrapper">
    {{ form_start(form) }}

    <div>
        {% if form.redirectPath.vars.errors|length %}
        <div class="form-error-wrapper">
            {{ form_errors(form.redirectPath) }}
        </div>
        {% endif %}
        {{ form_label(form.redirectPath) }}
        {{ form_widget(form.redirectPath) }}
    </div>

    <div>
        {% if form.mode.vars.errors|length %}
        <div class="form-error-wrapper">
            {{ form_errors(form.mode) }}
        </div>
        {% endif %}
        {{ form_label(form.mode) }}
        {{ form_widget(form.mode) }}
    </div>

    <div>
        {% if form.ips.vars.errors|length %}
        <div class="form-error-wrapper">
            {{ form_errors(form.ips) }}
        </div>
        {% endif %}
        {{ form_label(form.ips) }}
        {{ form_widget(form.ips) }}
    </div>

    <div>
        {% if form.archived.vars.errors|length %}
        <div class="form-error-wrapper">
            {{ form_errors(form.archived) }}
        </div>
        {% endif %}
        {{ form_label(form.archived) }}
        {{ form_widget(form.archived) }}
    </div>


    <div>
        {{ form_widget(form.save) }}
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
