<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>

        {# Flash messages defined by the bundle controllers are displayed. #}
        <div class="st-message-container">
            {% for key, messages in app.session.flashbag.all() %}
                {% for content in messages %}
                    <div class="st-message">
                        <div class="container mt-3 alert alert-{{ key }} alert-dismissible fade show" role="alert">
                            <div>{{ content.title }}</div>
                            <div>{{ content.message|raw }}</div>
                            {% if content.context is defined %}
                            <div>{{ content.context|raw }}</div>
                            {% endif %}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
