<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {{ encore_entry_link_tags('tailwind') }}
        {% endblock %}
    </head>
    <body class="flex flex-col justify-center items-center w-screen max-w-screen h-auto min-h-screen bg-gradient-to-r from-aubergine-canonical-100 to-orange-ubuntu-100 overflow-hidden text-6xl">

        {% include 'flash_message.html.twig' %}

        {% include 'partial/header.html.twig' %}

        <main class="flex flex-1 flex-wrap justify-center items-center xl:flex-no-wrap xl:items-center w-screen max-w-screen p-10 xl:mt-auto mb-auto">
            {% block body %}{% endblock %}
        </main>

        {% include 'partial/footer.html.twig' %}

        {% include 'shell/shell.html.twig' %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('shell') }}
        {% endblock %}
    </body>
</html>
