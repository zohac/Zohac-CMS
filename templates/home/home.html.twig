{% extends 'base.html.twig' %}

{% block title %}Home!{% endblock %}

{% block body %}

    <section class="flex justify-center items-center w-full xl:w-1/2 h-full">

        <div class="flex flex-col w-full xl:w-auto xl:flex-wrap xl:flex-row bg-grey-warm-20 text-grey-cool rounded-lg xl:rounded shadow-lg overflow-hidden transition-all">
            <img src="assets/images/portrait.jpg"
                 alt="portrait"
                 class="w-1/2 xl:w-1/4 h-auto rounded-full ml-auto mr-auto mt-10 xl:m-0 xl:p-5">
            <div class="flex flex-col justify-center w-auto m-10 text-center xl:text-left xl:w-2/4 xl:m-0 xl:p-5">
                <span class="text-6xl xl:text-2xl font-bold">Simon JOUAN</span>
                <span class="text-4xl xl:text-base text-grey-warm-100">DÃ©veloppeur Web FullStack</span>
            </div>
            <div class="flex w-full justify-center items-center bg-aubergine-dark-100 xl:bg-grey-warm-20 text-grey-warm-20 xl:text-grey-cool p-10 xl:p-5 xl:w-1/4 xl:p-5 text-4xl">
                <a href="#" class="mr-6 xl:mr-1">
                    <i class="fab fa-github-square text-8xl xl:text-5xl xl:text-aubergine-dark-100"></i>
                </a>
                <a href="#">
                    <i class="fab fa-twitter-square text-8xl xl:text-5xl xl:text-aubergine-dark-100"></i>
                </a>
            </div>
        </div>

    </section>

    <section class="xl:flex xl:flex-1 justify-center items-center xl:w-1/2 h-full">
        {% set httpHost = app.request.getHttpHost %}
        {% if is_granted("ROLE") %}
            {% set username = app.user.username %}
        {% else %}
            {% set username = 'anon.' %}
        {% endif %}

        <div id="shell-simulator"
             class="h-full w-full text-grey-warm-20 hidden"
             data-httphost="{{ httpHost }}"
             data-username="{{ username }}">
           <div id="shell-simulator-header" class="bg-grey-cool text-center w-full h-auto rounded-t p-1">{{ httpHost }}</div>
            <div id="shell-simulator-content" class="bg-aubergine-dark-100 border-solid border border-grey-cool w-full p-1">
                <form id="shell-form" autocomplete="off">
                    <label class="flex flex-no-wrap">
                        <span class="text-shell-green">{{ username }}@{{ httpHost }}</span>:<span class="text-shell-blue">~</span>$
                        <input id="shell-input" type="text" class="bg-aubergine-dark-100 w-full">
                    </label>
                </form>
            </div>
        </div>
    </section>

{% endblock %}